<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 描边 ：边框宽度与颜色 -->
    <stroke
        android:width="@dimen/divide_line_height"
        android:color="@color/text_color_graye9" />
    <!-- 主要内容的padding 文字距离上下左右的距离 -->
    <padding
        android:bottom="0dp"
        android:left="@dimen/layout_mid_margin"
        android:right="@dimen/layout_mid_margin"
        android:top="0dp" />
    <!-- 圆角的半径  也可以统一设置半径 android:radius="9dip" -->
    <corners android:radius="5dp" />
    <solid android:color="@color/text_color_graye9" />

</shape>