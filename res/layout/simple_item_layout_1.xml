<?xml version="1.0" encoding="utf-8"?>
<com.joey.general.views.CheckableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp" >

        <CheckBox
            android:id="@+id/item_simple1_checkbox"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:button="@drawable/btn_checkbox_selector"
            android:checked="true"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/layout_tag_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/layout_min_margin"
            android:layout_marginRight="@dimen/layout_min_margin"
            android:layout_toRightOf="@+id/item_simple1_checkbox" >

            <TextView
                android:id="@+id/item_text_tag"
                style="@style/text_mid_style"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/default_edit_height"
                android:layout_centerVertical="true"
                android:gravity="center_vertical"
                android:text="@string/add_new_file"
                android:textColor="@color/text_color_gray8e"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/item_img_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@android:color/transparent"
                android:src="@drawable/icon_album_photo" />
        </RelativeLayout>

        <TextView
            android:id="@+id/item_text"
            style="@style/text_mid_style"
            android:layout_width="match_parent"
            android:layout_height="@dimen/default_edit_height"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/layout_tag_logo"
            android:gravity="center_vertical"
            android:text="@string/add_new_file" />

        <TextView
            android:id="@+id/item_extra"
            style="@style/text_exmin_style"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/item_access"
            android:gravity="right"
            android:text="@string/add_new_file"
            android:textColor="@color/text_color_gray8e" />

        <ImageView
            android:id="@+id/item_access"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="center"
            android:src="@drawable/icon_right_arrow" />
    </RelativeLayout>

    <View
        android:id="@+id/divider_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divide_line_height"
        android:background="@color/divider_line"
        android:visibility="visible" />

</com.joey.general.views.CheckableLayout>